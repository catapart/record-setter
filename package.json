{
  "name": "record-setter",
  "version": "1.0.1",
  "description": "Asynchronous indexedDB wrapper",
  "main": "record-setter.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup record-setter.ts --format cjs,esm --dts --clean && tsc --outDir ./vanilla",
    "minify": "minify ./dist/record-setter.js > ./dist/record-setter.min.js",
    "lint": "tsc",
    "package": "tsup record-setter.ts --format cjs,esm --dts && minify ./dist/record-setter.js > ./dist/record-setter.min.js && tsc --outDir ./vanilla",
    "release": "tsup record-setter.ts --format cjs,esm --dts && minify ./dist/record-setter.js > ./dist/record-setter.min.js && tsc --outDir ./vanilla && changeset publish"
  },
  "keywords": [
    "indexedDB",
    "browser",
    "js",
    "async",
    "asynchronous",
    "local storage",
    "data",
    "data store",
    "save",
    "record"
  ],
  "author": "catapart",
  "license": "CC0-1.0",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "minify": "^11.4.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  }
}
